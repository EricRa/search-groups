{
  "manifest_version": 3,
  "name": "Search Groups",
  "version": "0.1",
  
  "description": "Search multiple specific sites at once",
  "homepage_url": "https://github.com/EricRa/search-groups",
  
  "background": {
    "scripts": ["background.js"]
  },
  
  "action": {
    "default_icon": "icons/sg.svg",
    "default_title": "Search Groups",
	"default_popup": "main/main.html"
  },
  
  "options_ui": {
	"page": "/options/options.html"
  },
  
  "permissions": ["storage"]
  
}